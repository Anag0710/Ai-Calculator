{
  "compilerOptions": {
    "composite": true, // Enable composite mode
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src"  // Root directory of source files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
